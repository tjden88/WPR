<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Base.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Separator" x:Key="WPRSeparator">
        <Setter Property="Background" Value="{DynamicResource DividerColorBrush}"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>

    <Style TargetType="Separator" x:Key="WPRVerticalSeparator" BasedOn="{StaticResource WPRSeparator}">
        <Setter Property="Margin" Value="5,0"/>
        <Setter Property="LayoutTransform">
            <Setter.Value>
                <RotateTransform Angle="90"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>