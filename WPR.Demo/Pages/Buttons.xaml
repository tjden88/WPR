<Page x:Class="WPR.Demo.Pages.Buttons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPR.Demo.Pages"
      xmlns:helpers="clr-namespace:WPR.Styles.Helpers;assembly=WPR.Styles"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Buttons">

    <StackPanel Width="150" >
        <Button Content="Flat Button" Margin="10"/>
        <Button Content="PRIMARY Button" Style="{StaticResource PrimaryWPRButton}"  Margin="10"/>
        <Button Content="ACCENT Button" Style="{StaticResource AccentWPRButton}"  Margin="10"/>
        <Button Content="Tool" Style="{StaticResource WPRToolButton}"  Margin="10"/>
        <Button Content="ToolNoRip" Style="{StaticResource WPRToolButtonNoRipple}"  Margin="10"/>
        <Button Content="Menu Button" Style="{StaticResource MenuButton}"  Margin="10"/>
        <Button Content="A" Style="{StaticResource RoundedButtonWithFloatingHintPrimary}" helpers:TextHelper.Hint="Hint!" Margin="10"/>
    </StackPanel>
</Page>
