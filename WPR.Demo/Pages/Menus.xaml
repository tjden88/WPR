<Page x:Class="WPR.Demo.Pages.Menus"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:wpr="clr-namespace:WPR;assembly=WPR"
      xmlns:helpers="clr-namespace:WPR.Helpers;assembly=WPR"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню, тулбары, слайдеры">

    <Grid>
        <StackPanel>
            <Menu >
                <MenuItem Header="Menu">
                    <MenuItem Header="Create">
                        <MenuItem.Icon>
                            <wpr:WPRIcon Source="Create"/>
                        </MenuItem.Icon>
                        <MenuItem Header="Create" IsCheckable="True" IsChecked="True"/>
                        <MenuItem Header="Create" IsCheckable="True" IsChecked="True"/>
                        <Separator/>
                        <MenuItem Header="Close" InputGestureText="Ctrl+E"/>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Close"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Create"/>
                    <Separator/>
                    <MenuItem Header="Close"/>
                </MenuItem>
            </Menu>
            <ToolBarTray>
                <ToolBar Header="Head">
                    <Button Content="Test"/>
                    <Button Command="Cut" Foreground="{DynamicResource PrimaryTextColorBrush}">
                        <wpr:WPRIcon Source="ContentCut"/>
                    </Button>
                    <Separator/>
                    <CheckBox>
                        <wpr:WPRIcon Source="Check"/>
                    </CheckBox>
                    <CheckBox>
                        <wpr:WPRIcon Source="Check"/>
                    </CheckBox>
                    <Separator/>
                    <RadioButton Content="1"/>
                    <RadioButton Content="2"/>
                    <Separator/>
                    <TextBlock Text="Combo" VerticalAlignment="Center" Margin="5"/>
                    <ComboBox Width="50">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="12"/>
                        <ComboBoxItem Content="14"/>
                        <ComboBoxItem Content="16"/>
                    </ComboBox>
                    <Separator/>
                    <TextBox Width="100" helpers:TextHelper.Hint="Filter"/>
                </ToolBar>
                <ToolBar Header="Header2">
                    <Button Content="Test2"/>
                </ToolBar>
            </ToolBarTray>
            <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBox" helpers:TextHelper.Hint="Hint" Width="176">
            </TextBox>
            <Slider Value="5" Width="300"/>
        </StackPanel>

    </Grid>
</Page>
