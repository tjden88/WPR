<Window x:Class="WPR.Demo.Test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:WPR.Demo.ViewModels"
        xmlns:controls="clr-namespace:WPR.Controls;assembly=WPR"
        DataContext="{Binding Source={StaticResource Locator}, Path=TestViewModel }"
        mc:Ignorable="d"
        Title="Test" Height="450" Width="800">
    <StackPanel>
        <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Command="{Binding TestTypedCommand}" CommandParameter="{Binding Text}">Тест типизированной команды</Button>
        <Button Command="{Binding TestCommand}">Тест типизированной команды</Button>
    </StackPanel>
</Window>
