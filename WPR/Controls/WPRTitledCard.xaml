<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WPR.Controls">

    <Style TargetType="{x:Type controls:WPRTitledCard}">
        <Setter Property="Foreground" Value="{DynamicResource SecondaryTextColorBrush}"/>
        <Setter Property="Background" Value="{DynamicResource BackgroundColorBrush}"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:WPRTitledCard}">
                    <StackPanel Margin="5" Background="{TemplateBinding Background}">
                        <StackPanel Orientation="Horizontal">
                            <controls:WPRIcon Source="{TemplateBinding IconSource}" Margin="7" IconSize="24" Foreground="{TemplateBinding Foreground}" />
                            <TextBlock Text="{TemplateBinding Header}" FontSize="14" VerticalAlignment="Center" Margin="5" Foreground="{TemplateBinding Foreground}"/>
                        </StackPanel>
                        <Rectangle Height="1" Fill="{DynamicResource DividerColorBrush}" Margin="-5,0,-5,5"/>
                        <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>